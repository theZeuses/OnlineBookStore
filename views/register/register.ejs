<link href="/public/assets/css/bootstrap.css" rel="stylesheet" id="bootstrap-css">
<script src="/public/assets/js/bootstrap.js"></script>
<script src="/public/assets/js/jquery-3.5.1.js"></script>
<script src="/public/assets/js/app-ui.js"></script>
<link href="/public/assets/css/app.css" rel="stylesheet">

<section class="testimonial py-5  register" id="testimonial">
    <div class="container">
        <div class="row ">
            <div class="col-md-4 py-5 bg-primary text-white text-center ">
                <div class=" ">
                    <div class="card-body">
                        <img src="http://www.ansonika.com/mavia/img/registration_bg.svg" style="width:30%">
                        <h2 class="py-3">Registration</h2>
                        <p>Register yourself to be able to use our service.</p>
                    </div>
                </div>
            </div>
            
            <div class="col-md-8 py-5 border">
                <h4 class="pb-4">Please fill with your details</h4>
                <form method="post">
                    
                        <%if(typeof alert != 'undefined'){%>
                            <%alert.forEach(function(error){%>
                                <div class="form-row">
                                    <div class="alert alert-danger" role="alert">
                                        <%= error.msg %> 
                                    </div>

                                </div>
                            <% }) %>
                        <% } %> 
            
                        <%if(typeof alertOne != 'undefined'){%>
                            <div class="form-row">
                                <div class="alert alert-success" role="alert">
                                    <%= alertOne%> 
                                </div>
                            </div>
                        <% } %>  

                        <%if(typeof alertTwo != 'undefined'){%>
                            <div class="form-row">
                                <div class="alert alert-danger" role="alert">
                                    <%= alertTwo%> 
                                </div>
                            </div>
                        <% } %> 
                    
                    <div class="form-row">
                        <div class="form-group col-md-6">
                          <input id="Full Name" name="FullName" placeholder="Full Name" class="form-control" type="text" value="<%if(typeof user != 'undefined'){%><%=user.fullname%><%}%>" required="required">
                        </div>
                        <div class="form-group col-md-6">
                          <input type="email" class="form-control" name="email" id="inputEmail4" placeholder="Email" value="<%if(typeof user != 'undefined'){%><%=user.email%><%}%>" required="required">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                          <input id="User Name" name="UserName" placeholder="User Name" class="form-control" type="text" value="<%if(typeof user != 'undefined'){%><%=user.username%><%}%>" required="required">
                        </div>
                        <div class="form-group col-md-6">
                            <input id="Mobile No." name="MobileNo" placeholder="Mobile No." class="form-control" type="text" value="<%if(typeof user != 'undefined'){%><%=user.mobileno%><%}%>" required="required">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                          <input id="Password" name="Password" placeholder="Password" class="form-control" type="password" required="required" required="required">
                        </div>
                        <div class="form-group col-md-6">
                            <input id="PasswordConfirm" name="PasswordConfirm" placeholder="Retype Password" class="form-control" type="password" required="required">
                        </div>
                    </div>
                    <div class="form-row">            
                        <div class="form-group col-md-12">
                                  
                                  <select id="inputType" name="UserType" class="form-control" required="required">
                                    <option selected value="notValid">User Type ...</option>
                                    <option value="Admin"> Admin</option>
                                    <option value="Customer"> Customer</option>
                                  </select>
                        </div>
                        <div class="form-group col-md-12">
                                  <textarea id="bio" name="bio" cols="40" rows="5" class="form-control" placeholder="bio..."><%if(typeof user != 'undefined'){%><%=user.bio%><%}%></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <div class="form-group">
                                <div class="form-check">
                                  <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                                  <label class="form-check-label" for="invalidCheck2">
                                    <small>By clicking Submit, you agree to our Terms & Conditions, Visitor Agreement and Privacy Policy.</small>
                                  </label>
                                </div>
                              </div>
                    
                          </div>
                    </div>
                    
                    <div class="form-row">
                        <input type="submit" name="submit" class="btn btn-danger" value="Submit">
                        <a href="/login" class="btn btn-secondary">Log In</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
