<link href="/public/assets/css/bootstrap.css" rel="stylesheet" id="bootstrap-css">
<link href="/public/assets/css/app.css" rel="stylesheet">
<%- include('../admin/header.ejs') %>


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="page-header">
                <h1>All Users List</h1>
            </div>
            <p>Here are all the user (both customer and admin) </p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>Search by keyword...</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <input type="search" id="search" value="" class="form-control" placeholder="keyword">
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table" id="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile No.</th>
                        <th>Type</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% for( var i = 0; i < users.length; i++){ %> 
                        <tr>
                            <td><%= users[i].userid%></td>
                            <td><%= users[i].fullname%></td>
                            <td><%= users[i].email%></td>
                            <td><%= users[i].mobileno%></td>
                            <td><%= users[i].type%></td>
                            <td>
                                <a href="/admin/users/profile/<%= users[i].userid%>" class="btn btn-success btn-sm" >Profile</a>
                                <% if(users[i].type == "Customer"){ %> 
                                    <button type="button" class="btn btn-danger btn-sm user-remove-modal" user-id="<%= users[i].userid%>" user-name="<%= users[i].fullname%>" data-toggle="modal" data-target="#exampleModalCenter2">
                                        Remove
                                    </button>   
                                <% } %>                 
                            </td>
                        </tr>
                    <% } %> 
                </tbody>
            </table>
            <hr>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLongTitle">Are you sure to remove?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            </div>
            <div class="modal-body">
            <h3>User ID: </h3><h4 id="modal-user-id"></h4>
            <h3>User Name: </h3><h4 id="modal-user-name"><h4>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <a href="" id="remove-user-by-id" class="btn btn-danger">Remove</a>
            </div>
        </div>
        </div>
    </div>

<script src="/public/assets/js/bootstrap.js"></script>
<script src="/public/assets/js/jquery-3.5.1.js"></script>
<script src="/public/assets/js/app-ui.js"></script>
<script src="//rawgithub.com/stidges/jquery-searchable/master/dist/jquery.searchable-1.0.0.min.js"></script>