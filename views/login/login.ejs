<link href="/public/assets/css/bootstrap.css" rel="stylesheet" id="bootstrap-css">
<script src="/public/assets/js/bootstrap.js"></script>
<script src="/public/assets/js/jquery-3.5.1.js"></script>
<link href="/public/assets/css/app.css" rel="stylesheet">

<div class="sidenav">
         <div class="login-main-text">
            <h1>OnLineBookStore<h1></h1><br><h2>Login Page</h2>
            <p>Please login or register from here to access.</p>
         </div>
      </div>
      <div class="main">
         <div class="col-md-6 col-sm-12">
            <div class="login-form">
               <form method="post">
                  <div class="form-group">
                     
                     <label>User ID</label>
                     <input type="text" name="username" class="form-control" placeholder="User Name">
                  </div>
                  <div class="form-group">
                     <label>Password</label>
                     <input type="password" name="password" class="form-control" placeholder="Password">
                  </div>
                  <input type="submit" name="submit" class="btn btn-black" value="Log In">
                  <a href="/register" class="btn btn-secondary">Register</a>
               </form>
               <%if(typeof alertTwo != 'undefined'){%>
                  <div class="form-row">
                      <div class="alert alert-danger" role="alert">
                          <%= alertTwo%> 
                      </div>
                  </div>
              <% } %> 
            </div>
         </div>
      </div>